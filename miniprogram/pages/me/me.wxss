/* miniprogram/pages/me/me.wxss */
page{
  height: 100%;
}
.container {
  width: auto;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #eeeeee;
} 

.login-head{
  width: 100%;
  height: 340rpx;
  background-color: #007acc;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.tel-input{
  height: 50rpx;
  width: 60%;
  padding: 20rpx;
  background-color: #eeeeee;
  font-size: large;
}
.login-button{
  width: 320rpx;
  height: 80rpx;
  background-color: antiquewhite;
  border-radius: 30rpx;
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.login-title{
  font-size: x-large;
  color: #eeeeee;

}
.login-text{
  font-size: small;
  color: #eeeeee;
  margin-top: 20rpx;
}
.me-tip{
  display: flex;
  padding: 15%;

  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.me-list{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.me-item{
  width: 100%;
  background-color: #ffffff;
  font-size: large;
  margin-top: 20rpx;
  padding-left: 60rpx;
  padding-right: 30rpx;
  padding-top: 15rpx;
  padding-bottom: 15rpx
}