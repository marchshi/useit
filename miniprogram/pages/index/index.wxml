<!--index.wxml-->
<view class="container">
  <view class="bg-search">
    <view class="index-search"  bindtap="onSearchTap">
      搜索企业 
    </view>
  </view>
  <view class="swiper-view">
    <swiper indicator-dots="{{indicatorDots}}"
        autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
        <block wx:for="{{background}}" wx:key="*this">
          <swiper-item>
            <image class="index-image" src="../../images/{{item}}" data-id="{{index}}" mode="widthFix" />
          </swiper-item>
        </block>
      </swiper>
  </view>
  

  <view>
    <view class="index-text" >
      收藏的企业
    </view>
  </view>

  <view wx:for="{{collectArray}}" wx:key="unique">
    <navigator class="collect-item" url="/pages/cmpinfo/cmpinfo?cmpId={{item.cmpId}}" open-type="navigate">
      {{item.cmpName}}
    </navigator>
  </view>

  <view wx:if="{{!logined}}" class="index-login">
    登录后显示
  </view>
  <view wx:if="{{logined&&collectArray.length==0}}" class="index-login">
    可在企业详情的右上角添加收藏
  </view>
</view>